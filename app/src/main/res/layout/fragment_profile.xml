<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/profile_icon"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/name"
                        android:textColor="@color/green_borders"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/name_profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/green_borders"
                        android:textColorHint="@color/grey_500"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/email"
                        android:textColor="@color/green_borders"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/email_profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/green_borders"
                        android:textColorHint="@color/grey_500"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/phone_number"
                        android:textColor="@color/green_borders"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/phone_profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/green_borders"
                        android:textColorHint="@color/grey_500"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/address"
                        android:textColor="@color/green_borders"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/my_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/green_borders"
                        android:textColorHint="@color/grey_500"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_products_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/my_products"
                        android:textColor="@color/green_borders"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/my_product_profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/green_borders"
                        android:textColorHint="@color/grey_500"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_services_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/my_services"
                        android:textColor="@color/green_borders"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:id="@+id/my_services_ptofile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/green_borders"
                        android:textColorHint="@color/grey_500"
                        android:textSize="13dp"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/chat_profile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="serif"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:paddingStart="50dp"
                        android:paddingEnd="50dp"
                        android:text="@string/chat"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_background_green"/>

                    <Button
                        android:id="@+id/logout_user_btn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="40dp"
                        android:background="@drawable/button_background_white"
                        android:fontFamily="serif"
                        android:paddingStart="50dp"
                        android:paddingEnd="50dp"
                        android:text="@string/logout"
                        android:textColor="@color/green_text"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>